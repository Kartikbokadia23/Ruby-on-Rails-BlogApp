<% provide(:title, "Log in") %>


<div class="login-form">
<div>
  <img src="https://42f2671d685f51e10fc6-b9fcecea3e50b3b59bdc28dead054ebc.ssl.cf5.rackcdn.com/illustrations/Post_re_mtr4.svg" width="400px" className="form-img ml-5"></img>
</div>
  <div class="col-md-4 col-md-offset-3 mb-3">
  <h1 class="pb-3">Log in</h1>
  </br>
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, class: 'form-control form-input-1' %>
      </br>

      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, class: 'form-control form-input-2' %>

      </br>

      <%= f.submit "Log in", class: "btn btn-primary form-btn" %>
    <% end %>
  </div>
</div>
